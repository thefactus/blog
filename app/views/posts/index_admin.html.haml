%div
  = link_to 'New Post', new_post_path, class: 'btn btn-primary pull-right h1'
%article{"ng-app": "posts", "ng-controller": "PostSearchController" }
  %h1 Posts

  %section.search-form
    %form
      .input-group.input-group-md
        %label.sr-only{:for => "keywords"} Keywords
        %input.form-control.input-md{:name => "keywords", "ng-model" => "keywords", :placeholder => "Search", :type => "text", "autocomplete": "off"}/
        %span.input-group-btn
          %button.btn.btn-primary.btn-md{"ng-click" => "search(keywords)"}
            Find Customers

  %h1.searchedFor{"ng-if": "searchedFor"}
    %small
      Searched for:
    {{searchedFor}}

  %hr

  %section.search-results
    %ol.list-group
      %li.list-group-item.clearfix{"ng-repeat": "post in posts"}
        %h3.pull-right
          %small.text-uppercase
            Created {{ post.created_at | date }}
        %h2.h3
          {{ post.title }}
        .pull-right
          %a.btn.btn-primary.btn-sm{href: '/posts/{{post.id}}/edit'} Edit
          %a.btn.btn-danger.btn-sm{href: '/posts/{{post.id}}', "data-method": "delete", "data-confirm": "Are you sure?"} Delete
        %h4
          {{ post.user.email }}
