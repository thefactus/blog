.row
  - @posts.each do |post|
    .col-sm-6.col-md-4
      .thumbnail
        .caption{align:"justify"}
          %h3
            = link_to post['title'], post_path(post['id'])
          %p
            = raw post['subtitle']
          %small
            = raw post['tags']
          %br
          %small.pull-right #{raw post['created_at']}
          %br
